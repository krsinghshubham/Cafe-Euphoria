        <% menus.sort.each do |menu| %>
            <li class="MenuItem">
                <label class="MenuItem-container">
                    <%= menu.name %>
                </label>
                <label class="MenuItem-container" >
                    <p class="MenuItem-price">â‚¹</p><%= menu.price %><p>

                    <%= button_to '+', "/menus/#{menu.id}" , method: :put, class: "MenuItem-qunatity" %>
                    <%= menu.quantity %>
